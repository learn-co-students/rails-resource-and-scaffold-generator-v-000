<p id="notice"><%= notice %></p>

<h1>Listing Artciles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artciles.each do |artcile| %>
      <tr>
        <td><%= artcile.title %></td>
        <td><%= artcile.body %></td>
        <td><%= link_to 'Show', artcile %></td>
        <td><%= link_to 'Edit', edit_artcile_path(artcile) %></td>
        <td><%= link_to 'Destroy', artcile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

